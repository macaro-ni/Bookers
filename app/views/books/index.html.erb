
<body>
<h1>Books</h1>
<table>
    <thead class=title-body-index>
       <th>title</th>
       <th>body</th>
       <th colspan="3"></th><!--セルを横に３つ繋げる-->
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr class=class="lists">
           <td><%= book.title %></td>
           <td><%= book.body %></td>

           <td><%= link_to 'Show', book_path(book.id)  %></td>
           <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
           <td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm"=> "Are you sure?" %></li>
        </tr>

        <% end %>
    </tbody>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<div class="for">
    <%= form_with model:@book do |f|%>
    <label for ="book_title">Title</label>
    <%= f.text_field :title %>

    <label for="book_body">Body</label>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
    <% end %>
</div>
</body>